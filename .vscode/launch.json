    "version": "0.2.0",
    "configurations": [

        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "args": [
              "--timeout", "999999",
              "--colors",
              "./dist/test"
            ],
            "runtimeArgs": [
              "--nolazy"
            ],
            "sourceMaps": true,
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ]
        }
    ]
}
